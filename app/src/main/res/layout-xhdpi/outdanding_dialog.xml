<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/rounded_bg"
    android:orientation="vertical">


    <com.datamation.kfdupgradesfa.utils.CustomFont
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Outstanding List"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp" />


    <LinearLayout

        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="8">

        <com.datamation.kfdupgradesfa.utils.CustomFont
            android:id="@+id/txtRefno"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Invoice no"
            android:textSize="14sp" />

        <com.datamation.kfdupgradesfa.utils.CustomFont
            android:id="@+id/txtDate"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="Date"
            android:textSize="14sp" />

        <com.datamation.kfdupgradesfa.utils.CustomFont
            android:id="@+id/txtAge"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="1dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="Age"
            android:textSize="14sp" />

        <com.datamation.kfdupgradesfa.utils.CustomFont
            android:id="@+id/txtAmount"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_weight="2.5"
            android:gravity="right|center_vertical"
            android:paddingRight="5dp"
            android:text="Amount"
            android:textSize="14sp" />

    </LinearLayout>


    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="#dcdcdc"></View>

    <ListView
        android:id="@+id/download_listview"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="550dp"></ListView>


    <com.datamation.kfdupgradesfa.utils.CustomFont
        android:id="@+id/close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/bottom_button_bg"
        android:gravity="center"
        android:text="OK"
        android:textColor="#fff"
        android:textSize="20sp" />


</LinearLayout>


