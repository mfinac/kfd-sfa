<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_order_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <com.datamation.kfdupgradesfa.utils.CustomizeFont
                android:id="@+id/row_order_descript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="2dp"
                android:text="Product"
                android:textAllCaps="true"
                android:textColor="@color/material_alert_neutral_button"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.datamation.kfdupgradesfa.utils.CustomizeFont
                android:id="@+id/row_product_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="2dp"
                android:text="Product"
                android:textAllCaps="true"
                android:textColor="@color/material_alert_neutral_button"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.datamation.kfdupgradesfa.utils.CustomizeFont
                android:id="@+id/row_discription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_weight="1"
                android:gravity="left"
                android:paddingLeft="2dp"
                android:text="Discription"
                android:textAllCaps="true"
                android:textColor="@color/material_alert_neutral_button"
                android:textSize="12sp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/l1"
            android:orientation="horizontal"
            android:padding="5dp">


            <com.datamation.kfdupgradesfa.utils.CustomizeFont
                android:id="@+id/row_unit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_weight="1.5"
                android:gravity="left"
                android:paddingLeft="2dp"
                android:text="Units"
                android:textAllCaps="true"
                android:textColor="@color/material_alert_neutral_button"
                android:textSize="14sp"
                android:textStyle="bold"/>


            <com.datamation.kfdupgradesfa.utils.CustomizeFont
                android:id="@+id/row_qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="(Qty)"
                android:textAllCaps="true"
                android:textColor="@color/material_alert_neutral_button"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <com.datamation.kfdupgradesfa.utils.CustomizeFont
                android:id="@+id/row_unitPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Unit Price"
                android:textAllCaps="true"
                android:textColor="@color/material_alert_neutral_button"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <com.datamation.kfdupgradesfa.utils.CustomizeFont
                android:id="@+id/row_amount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dip"
                android:layout_marginRight="1dip"
                android:layout_weight="1"
                android:gravity="right"
                android:paddingRight="5dp"
                android:text="(Rs)"
                android:textAllCaps="true"
                android:textColor="@color/material_alert_neutral_button"
                android:textSize="14sp"
                android:textStyle="bold"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>

